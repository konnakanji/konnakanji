answer-margin = 0.2rem

multiple-choice-test
	vertical
	flex 1

.question
	vertical
	justify-content center
	flex 1

.answers
	horizontal-wrap
	margin-top 1rem

.answer
	width calc(50% - answer-margin * 2)
	margin answer-margin
	font-size 1.2rem

.correct
	color white
	background hsl(120, 100%, 30%)

.wrong
	color white
	background red
mixin button-hover
	:hover,
	&.active
		cursor pointer

	:active
		transform translateY(3px)

input, textarea, button, .button, select
	ui-element
	font-family inherit
	font-size 1em
	line-height 1.5em
	color text-color

button,
.button
	horizontal
	padding 0.5rem 1rem
	color button-color
	align-items center
	pointer-events all
	box-shadow 0 4px 4px rgba(0, 0, 0, 0.05)
	button-hover

	[disabled]
		opacity 0.4
mixin button-hover
	:hover,
	&.active
		cursor pointer

	:active
		transform translateY(3px)

input, textarea, button, select
	ui-element
	font-family inherit
	font-size 1em
	line-height 1.5em
	color text-color

button
	horizontal
	padding 0.5rem 1rem
	color button-color
	align-items center
	pointer-events all
	button-hover

	:focus
		border 0

	[disabled]
		opacity 0.4